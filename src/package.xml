<?xml version="1.0" encoding="utf-8"?>
<package
  name="dataBcCdc"
  displayName="Add-On to the Epi Package for BC CDC data"
  isAddOn="True" 
  extendsPackage="epi"
  version="1.0.0">
  <transformers>
    <transformer 
      name="Download" 
      isPrimary="True"
      displayName="Download and prepare BC CDC COVID-19 data"
      programName="Rscript"
      programArguments="download.R"
      extendsTransformer="epi_Primary"
      isRunnable ="True">
      <include>
        <transformer name="Import"/>
      </include>
    </transformer>
    <transformer
      name="Import"
      displayName="Import BC CDC COVID-19 data"
      programName="Rscript"
      programArguments="import.R"
      isRunnable ="True">
    </transformer>
  </transformers>
</package>